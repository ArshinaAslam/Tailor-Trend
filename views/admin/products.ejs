<%- include("../../views/partials/admin/header") %>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.css">
    <style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f4f6f9;
        margin: 0;
        padding: 0;
    }

    .content-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        background: linear-gradient(135deg, #6e8efb, #a777e3);
        color: #fff;
        border-radius: 10px;
        margin: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .content-header h2 {
        font-size: 26px;
        font-weight: 600;
        margin: 0;
    }

    .search-add-container {
        display: flex;
        align-items: center;
        gap: 15px;
        color: black;
    }

    .input-group {
        display: flex;
        background: #fff;
        border-radius: 30px;
        overflow: hidden;
        padding: 5px;
        border: 1px solid #ddd;
    }

    .input-group input {
        border: none;
        padding: 12px 15px;
        width: 250px;
        outline: none;
        border-radius: 30px;
    }

    .input-group button {
        background-color: #6e8efb;
        color: #fff;
        padding: 12px 20px;
        border: none;
        border-radius: 30px;
        cursor: pointer;
        transition: 0.3s;
    }

    .input-group button:hover {
        background-color: #5a7df8;
    }

    .btn-add-product {
        background-color: #28a745;
        color: #fff;
        padding: 12px 20px;
        border-radius: 30px;
        font-size: 14px;
        transition: 0.3s;
        text-decoration: none;
    }

    .btn-add-product:hover {
        background-color: #218838;
    }

    .table-container {
        background: #fff;
        padding: 20px;
        margin: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        border-radius: 10px;
        overflow: hidden;
    }

    .table thead th {
        background: #6e8efb;
        color: #fff;
        padding: 14px;
    }

    .table tbody tr {
        transition: background 0.3s;
    }

    .table tbody tr:hover {
        background: #f1f1f1;
    }

    .table tbody td {
        padding: 14px;
        text-align: center;
    }

    .btn {
        padding: 10px 15px;
        border-radius: 25px;
        transition: 0.3s;
        cursor: pointer;
    }

    .pagination-container {
        display: flex;
        justify-content: center;
        margin-top: 20px;
        padding: 20px;
    }

    .pagination-container a, .pagination-container span {
        padding: 10px 15px;
        border-radius: 20px;
        text-decoration: none;
        margin: 5px;
        color: #6e8efb;
        border: 1px solid #6e8efb;
        transition: 0.3s;
    }

    .pagination-container a:hover {
        background: #6e8efb;
        color: #fff;
    }
</style>
</head>
<div class="content-header">
    <h2>Products</h2>
    <div class="search-add-container">
        <form action="" method="get">
            <div class="input-group">
                <input type="text" placeholder="Search products or brands" name="search">
                <button type="submit">Search</button>
            </div>
        </form>
        <a href="/admin/addProducts" class="btn btn-add-product">Add Product</a>
    </div>
</div>
<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Brand</th>
                <th>Category</th>
                <th>Sale Price</th>
                <th>Offer</th>
                <th>Size and Quantity</th>
                <th>Action</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            <% for (let i = data.length - 1; i >= 0; i--) { %>
            <tr>
                <td><%= data[i].productName %></td>
                <td><%= data[i].brand %></td>
                <td><%= data[i].category ? data[i].category.name : 'No Category' %></td>
                <td><%= data[i].salePrice %></td>
                <td>
                    <a href="#" class="btn btn-info">Add Offer</a>
                    <a href="#" class="btn btn-danger">Remove</a>
                </td>
                <td>
                    <% if (data[i].sizes && data[i].sizes.length > 0) { %>
                        <% data[i].sizes.forEach(sizeObj => { %>
                            <p><strong><%= sizeObj.size %></strong>: <%= sizeObj.quantity %></p>
                        <% }) %>
                    <% } else { %>
                        No Sizes Available
                    <% } %>
                </td>
                
                <td>
                    <% if (data[i].isBlocked === false) { %>
                        <button class="btn btn-danger" onclick="confirmBlock('<%= data[i]._id %>', 'block')">Block</button>
                    <% } else { %>
                        <button class="btn btn-success" onclick="confirmBlock('<%= data[i]._id %>', 'unblock')">Unblock</button>
                    <% } %>
                </td>
                
                <td>
                    <a href="/admin/editProduct?id=<%= data[i]._id %>" class="btn btn-info">Edit</a>
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>
</div>

<!-- Centered Pagination --><div class="pagination-container">
    <% if (currentPage > 1) { %>
        <a href="?page=<%= currentPage - 1 %><%= search ? '&search=' + search : '' %>">&laquo; Previous</a>
    <% } %>
    
    <% for (let i = 1; i <= totalPages; i++) { %>
        <% if (i === currentPage) { %>
            <span class="current-page"><%= i %></span>
        <% } else { %>
            <a href="?page=<%= i %><%= search ? '&search=' + search : '' %>"><%= i %></a>
        <% } %>
    <% } %>
    
    <% if (currentPage < totalPages) { %>
        <a href="?page=<%= Number(currentPage) + 1 %><%= search ? '&search=' + search : '' %>">Next &raquo;</a>
    <% } %>
</div>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<%- include("../../views/partials/admin/footer") %>

<script>
    function confirmBlock(productId, action) {
        const actionText = action === 'block' ? 'Block' : 'Unblock';
        const actionUrl = action === 'block' ? `/admin/blockedProduct?id=${productId}` : `/admin/unblockedProduct?id=${productId}`;
    
        Swal.fire({
            title: `Are you sure?`,
            text: `Do you want to ${actionText.toLowerCase()} this product?`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: action === 'block' ? '#d33' : '#28a745',
            cancelButtonColor: '#6c757d',
            confirmButtonText: `Yes, ${actionText} it!`
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = actionUrl;
            }
        });
    }
    </script>
    