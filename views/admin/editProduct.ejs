                    <input type="file" id="imageInput" multiple style="display: none;" accept="image/png, image/jpeg, image/jpg" onchange="handleImageUpload(event)">
                    <div id="image-error" class="error-message"></div>
                  </div>
                </div>
              </div>

              <div>
