<%- include("../../views/partials/user/header") %>

<style>
    .pagination {
        text-align: center;
        margin-top: 20px;
    }

    .pagination-list {
        list-style: none;
        padding: 0;
        display: inline-flex;
    }

    .pagination-list li {
        margin: 0 5px;
    }

    .pagination-list li a {
        text-decoration: none;
        padding: 8px 12px;
        border: 1px solid #ccc;
        border-radius: 5px;
        color: #333;
        background-color: #fff;
    }

    .pagination-list li.active a {
        background-color: #4361ee;
        color: white;
        border-color: #4361ee;
    }

    .pagination-list li a:hover {
        background-color: #f4f4f4;
    }
</style>

<main class="main">
  <div class="breadcrumb-wrap">
    <div class="container">
      <div class="breadcrumb">
        <a href="/" rel="nofollow">Home</a>
        <span></span> Profile <span></span> Referrals
      </div>
    </div>
  </div>

  <section class="py-4">
    <div class="dashboard-container">
      <!-- Sidebar Menu from Partial -->
      <%- include("../../views/partials/user/profile-sidebar") %>

      <!-- Content Area -->
      <div class="content-area">

        <!-- Referral Section -->
        <div id="referral-section">
          <div class="card mb-4">
            <div class="card-header">
              <h5 class="mb-0">Referral</h5>
            </div>
            <div class="card-body">
              <h6 class="mb-3">Refer your friends and earn money!</h6>
              
              <!-- Referral Link Section -->
              <div class="mb-3">
                <label class="form-label">Share this link:</label>
                <div class="input-group">
                  <input type="text" id="referralLink" class="form-control" value="http://yourdomain.com/register?ref=<%= referralCode %>" readonly>
                  <button class="btn btn-primary" onclick="copyReferralLink()">Copy</button>
                </div>
              </div>
              
              <!-- Earned Amount Display -->
              <p class="mt-3">Earned: â‚¹<%= earnedAmount.toFixed(2) %></p>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>
</main>

<%- include("../../views/partials/user/footer") %>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  function copyReferralLink() {
      const referralInput = document.getElementById('referralLink');
      referralInput.select();
      referralInput.setSelectionRange(0, 99999);
      document.execCommand("copy");
      Swal.fire({
          icon: 'success',
          title: 'Copied!',
          text: 'Referral link copied to clipboard.'
      });
  }
</script>
