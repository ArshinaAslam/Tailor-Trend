
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Verification</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
            background: #f4f4f9;
        }
        form {
            background: white;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
            text-align: center;
        }
        form h3 {
            margin-bottom: 1rem;
            color: #333;
        }
        label {
            display: block;
            margin-bottom: 0.5rem;
            color: #555;
        }
        input {
            width: 100%;
            padding: 0.8rem;
            margin-bottom: 1rem;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 1rem;
        }
        input:focus {
            border-color: #007bff;
            outline: none;
        }
        button {
            width: 100%;
            padding: 0.8rem;
            border: none;
            border-radius: 5px;
            font-size: 1rem;
            cursor: pointer;
            transition: background 0.3s;
            margin-bottom: 0.5rem;
        }
        button:hover {
            opacity: 0.9;
        }

        
        button[type="submit"] {
            background: #007bff;
            color: white;
        }
        button[type="submit"]:hover {
            background: #0056b3;
        }

        
        #resendOtp {
            background: #b0b0b0;
            color: white;
        }
        #resendOtp:hover {
            background: #8e8e8e;
        }

        .link {
            font-size: 0.9rem;
            color: #555;
        }
        .link a {
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
        }
        .link a:hover {
            text-decoration: underline;
        }

        #otpTimer {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: #f8f8f8;
            color: #333;
            font-size: 1.2rem;
            font-weight: bold;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 10px auto;
            border: 2px solid #ccc;
            transition: background 0.5s;
        }

    
        #otpTimer.expired {
            background: red;
            color: white;
            border-color: red;
        }

    </style>
   
</head>
<body>
    <form id="otpForm" method="post" action="/saveNewEmail" onsubmit="return validateOTPForm(event)">
        <h3>Verify Your Email</h3>
        <label for="otp">Enter OTP :</label>
        <input type="text" id="otp" name="otp" maxlength="6" pattern="[0-9]{6}" placeholder="Enter 6-digit OTP" required>
        <button type="submit">Verify Email</button>

        <!--  Timer -->
        <div id="otpTimer">
            <span id="timerValue">60</span>
        </div>

        <button type="button" id="resendOtp" onclick="resendOTP()" disabled>Resend OTP</button>
       
    </form>
    </body>
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>


    document.getElementById("otpForm").addEventListener("submit", async function (event) {
        event.preventDefault(); 

        const otpValue = document.getElementById("otp").value;

        const response = await fetch("/saveNewEmail", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ otp: otpValue })
        });

        const data = await response.json();

        if (data.success) {
            Swal.fire({
                title: "Success!",
                text: "Your email has been updated successfully!",
                icon: "success",
                confirmButtonText: "OK"
            }).then(() => {
                window.location.href = data.redirectUrl; 
            });
        } else {
            Swal.fire({
                title: "Error!",
                text: data.message,
                icon: "error",
                confirmButtonText: "Try Again"
            });
        }
    });



 function startOTPTimer(durationInSeconds) {
   let timer = durationInSeconds;
   const timerElement = document.getElementById('otpTimer');
   const resendButton = document.getElementById('resendOtp'); 
   const countdown = setInterval(function () {
     const minutes = Math.floor(timer / 60);
     const seconds = timer % 60;


     timerElement.textContent = `OTP Expires in: ${minutes}:${seconds < 10 ? '0' : ''}${seconds}`;


     if (--timer < 0) {
       clearInterval(countdown);
       timerElement.textContent = 'OTP Expired';
       timerElement.classList.add("expired"); 
       resendButton.disabled = false;
     }
   }, 1000);
 }



function resendOTP() {
   $.ajax({
       type: 'POST',
       url: '/resendOtpp',
       success: function (response) {
           if (response.success) {
               document.getElementById("resendOtp").disabled = true; 
               startOTPTimer(60); 
               Swal.fire("Success!", "OTP has been resent successfully!", "success");
           } else {
               Swal.fire("Error!", "Failed to resend OTP. Please try again.", "error");
           }
       },
       error: function () {
           Swal.fire("Error!", "Error occurred while resending OTP. Please try again.", "error");
       }
   });
}

 startOTPTimer(60);
</script>






